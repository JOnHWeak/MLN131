{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "buildCommand": "node ./node_modules/vite/bin/vite.js build",
                "installCommand": "npm ci --no-audit --no-fund --no-optional --no-bin-links"
            }
        }
    ],
    "routes": [
        {
            "handle": "filesystem"
        },
        {
            "src": "/.*",
            "dest": "/index.html"
        }
    ],
    "build": {
        "env": {
            "NODE_VERSION": "18",
            "NPM_CONFIG_BIN_LINKS": "false"
        }
    }
}